---
import Layout from "../layouts/Layout.astro";

const baseUrl = import.meta.env.BASE_URL;

const industrialProjects = [
  {
    title: "FAST-EO - Foundation Models for Earth Observation",
    period: "European Space Agency · 2023 - Present",
    paragraphs: [
      "Contribution to the development of foundation-model-based pipelines for multispectral Earth observation data processing.",
      "Work focused on dataset preparation, model adaptation, and methane super-emitter detection using satellite imagery.",
    ],
    stack: "Python · PyTorch · Multispectral Data · Foundation Models",
    external: {
      label: "Project Website",
      href: "https://www.fast-eo.eu/",
    },
  },
];

const researchProjects = [
  {
    title: "Machine Learning Algorithms for Autonomous Rovers",
    period: "2023 - 2024",
    paragraphs: [
      "Development of deep learning-based perception systems for autonomous planetary rover concepts.",
      "The project focused on scene understanding, abstract spatial representation, and evaluation-driven architecture refinement.",
      "Work included synthetic dataset generation, implementation of Bird's Eye View models for abstract environment mapping, modification of state-of-the-art deep learning architectures, and proposal of custom evaluation metrics.",
      "Awarded 3rd place in the Polish Space Agency thesis competition.",
    ],
    stack: "Python · PyTorch · MLflow · Docker · Jenkins",
    repo: "https://github.com/danielmarek22/leveraging-bev-rovers",
  },
  {
    title: "Depth Estimation from Stereoscopic Images Using Deep Learning",
    period: "2023 - 2024",
    paragraphs: [
      "Application of state-of-the-art deep learning techniques for stereo-based depth estimation and 3D scene reconstruction in robotic systems.",
      "Designed and trained models using synthetic datasets and evaluated their performance in generating three-dimensional spatial maps of the environment.",
    ],
    stack: "Python · PyTorch · Open3D · OpenCV",
    repo: "https://github.com/danielmarek22/rover-stereo-depth",
  },
  {
    title: "Extraterrestrial Rock Segmentation Using Machine Learning",
    period: "2022 - 2023",
    paragraphs: [
      "End-to-end deep learning pipeline for segmentation of lunar landscape imagery, designed with consideration for on-board inference and embedded constraints.",
      "Compared model architectures, evaluated performance, and implemented quantization strategies for deployment on resource-constrained systems.",
      "Awarded 3rd place in the Trumpf Huettinger engineering thesis competition.",
    ],
    stack:
      "Python · TensorFlow · OpenCV · NumPy · Pandas · MLflow · Embedded Optimization",
    repo: "https://github.com/danielmarek22/onboard-rock-segmentation",
  },
];

const linkClass =
  "group mt-8 inline-flex items-center gap-3 rounded-xl border border-slate-800 bg-slate-900/40 px-6 py-3 backdrop-blur-sm transition duration-300 hover:border-slate-600 hover:bg-slate-800/60";
---

<Layout title="Projects - Daniel Marek">
  <section class="mx-auto max-w-5xl px-6 pb-20 pt-32">
    <h1 class="mb-20 text-4xl font-bold tracking-tight text-slate-100 md:text-5xl">
      ESA & Industrial Research Projects
    </h1>

    <div class="space-y-28">
      {
        industrialProjects.map((project) => (
          <article>
            <h2 class="text-2xl font-semibold text-slate-200 md:text-3xl">{project.title}</h2>
            <p class="mt-2 text-sm text-slate-500">{project.period}</p>

            <div class="mt-6 max-w-3xl space-y-6 leading-relaxed text-slate-400">
              {
                project.paragraphs.map((paragraph) => (
                  <p>{paragraph}</p>
                ))
              }
            </div>

            <p class="mt-6 text-sm text-slate-500">{project.stack}</p>

            <a
              href={project.external.href}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-8 inline-flex items-center gap-2 rounded-lg border border-slate-700 px-5 py-3 text-slate-300 transition duration-300 hover:border-slate-500 hover:text-white"
            >
              {project.external.label}
              <span>↗</span>
            </a>
          </article>
        ))
      }
    </div>
  </section>

  <div class="mx-auto max-w-5xl px-6">
    <div class="my-24 h-px bg-slate-800"></div>
  </div>

  <section class="mx-auto max-w-5xl px-6 pb-32 pt-20">
    <h1 class="mb-20 text-4xl font-bold tracking-tight text-slate-100 md:text-5xl">
      Selected Research Projects
    </h1>

    <div class="space-y-28">
      {
        researchProjects.map((project) => (
          <article>
            <h2 class="text-2xl font-semibold text-slate-200 md:text-3xl">{project.title}</h2>
            <p class="mt-2 text-sm text-slate-500">{project.period}</p>

            <div class="mt-6 max-w-3xl space-y-6 leading-relaxed text-slate-400">
              {
                project.paragraphs.map((paragraph) => (
                  <p>{paragraph}</p>
                ))
              }
            </div>

            <p class="mt-6 text-sm text-slate-500">{project.stack}</p>

            <a href={project.repo} target="_blank" rel="noopener noreferrer" class={linkClass}>
              <img
                src={`${baseUrl}logos/github.svg`}
                alt="GitHub logo"
                class="h-5 opacity-70 transition group-hover:opacity-100"
              />
              <span class="text-slate-300 transition group-hover:text-white">View on GitHub</span>
            </a>
          </article>
        ))
      }
    </div>
  </section>
</Layout>
