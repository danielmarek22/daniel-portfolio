---
import Layout from "../layouts/Layout.astro";

const baseUrl = import.meta.env.BASE_URL;

const focusAreas = [
  {
    title: "Autonomous Robotics",
    image: "robotics.jpg",
    description: "Perception-driven autonomy for planetary and mobile robotic systems.",
  },
  {
    title: "Computer Vision",
    image: "vision.jpg",
    description:
      "Classic and deep learning-based computer vision for perception and environment understanding.",
  },
  {
    title: "Remote sensing & Space Systems",
    mobileTitle: "Space Systems",
    image: "space.jpg",
    description: "On-board AI pipelines and remote sensing applications for space missions.",
  },
  {
    title: "Embedded AI",
    image: "embedded.jpg",
    description: "Model optimization, quantization, and deployment for resource-constrained systems.",
  },
];

const featuredProjects = [
  {
    title: "Bird's Eye View in Planetary Rovers",
    image: "project-rover.jpg",
    summary:
      "Deep learning-based perception and obstacle mapping, for planetary robotic systems.",
  },
  {
    title: "Resource Frugal Depth Estimation",
    image: "project-depth.jpg",
    summary:
      "Stereo-based depth estimation using state-of-the-art deep learning models for resource-constrained systems.",
    reverse: true,
  },
  {
    title: "Planetary Rock Segmentation using Deep Learning",
    image: "project-rock.jpg",
    summary:
      "Deep learning-based segmentation of extraterrestrial terrain, focused on reliable on-board inference for planetary exploration systems.",
  },
];

const techCategories = [
  {
    title: "Machine Learning",
    logos: ["pytorch", "tensorflow", "sklearn", "lightning", "opencv", "ollama"],
    hoverShadow: "hover:shadow-[0_0_40px_rgba(56,189,248,0.12)]",
    overlay: "from-cyan-500/10 to-blue-600/10",
  },
  {
    title: "Data Analysis",
    logos: ["pandas", "numpy", "matplotlib"],
    hoverShadow: "hover:shadow-[0_0_40px_rgba(139,92,246,0.12)]",
    overlay: "from-purple-500/10 to-indigo-600/10",
  },
  {
    title: "Web Development",
    logos: ["django", "flask", "sqlite"],
    hoverShadow: "hover:shadow-[0_0_40px_rgba(34,197,94,0.12)]",
    overlay: "from-green-500/10 to-emerald-600/10",
  },
  {
    title: "Programming",
    logos: ["python", "cpp", "java", "ros"],
    hoverShadow: "hover:shadow-[0_0_40px_rgba(249,115,22,0.12)]",
    overlay: "from-orange-500/10 to-yellow-600/10",
  },
  {
    title: "Systems & Deployment",
    logos: ["docker", "jenkins", "git", "linux", "mlflow"],
    hoverShadow: "hover:shadow-[0_0_40px_rgba(59,130,246,0.12)]",
    overlay: "from-blue-500/10 to-slate-500/10",
  },
  {
    title: "Cloud",
    logos: ["aws"],
    hoverShadow: "hover:shadow-[0_0_40px_rgba(245,158,11,0.12)]",
    overlay: "from-amber-500/10 to-orange-600/10",
  },
];

const previewSections = [
  {
    title: "Publications",
    href: "papers",
    description:
      "Peer-reviewed research in deep learning, computer vision, and localization systems.",
  },
  {
    title: "Achievements",
    href: "achievements",
    description:
      "Awards, scholarships, and competitive recognitions in space-oriented machine learning research.",
  },
];

const contacts = [
  { label: "Email", href: "mailto:danielmarek22@email.com", icon: "gmail", external: false },
  { label: "GitHub", href: "https://github.com/danielmarek22", icon: "github", external: true },
  {
    label: "LinkedIn",
    href: "https://linkedin.com/in/daniel-marek22",
    icon: "linkedin",
    external: true,
  },
];
---

<Layout title="Daniel Marek">
  <section class="mx-auto flex min-h-screen max-w-6xl items-center px-6 pt-32">
    <div class="grid items-center gap-16 md:grid-cols-2">
      <div class="space-y-8">
        <p class="text-sm uppercase tracking-widest text-slate-500">AI Engineer</p>

        <h1
          class="bg-gradient-to-r from-white via-slate-200 to-slate-400 bg-clip-text text-5xl font-bold tracking-tight text-transparent md:text-7xl"
        >
          Daniel Marek
        </h1>

        <p class="max-w-xl text-xl text-slate-300">
          Designing intelligent autonomous systems for space exploration and Earth observation.
        </p>

        <p class="max-w-xl leading-relaxed text-slate-500">
          Machine learning engineer focused on computer vision, robotic perception, and deployable
          AI systems for planetary and remote sensing applications.
        </p>

        <div class="pt-4">
          <a
            href={`${baseUrl}about`}
            class="inline-block rounded-lg border border-slate-700 bg-slate-800 px-6 py-3 text-sm font-medium text-white transition hover:bg-slate-700"
          >
            Learn more about me →
          </a>
        </div>
      </div>

      <div class="flex justify-center md:justify-end">
        <img
          src={`${baseUrl}profile.jpg`}
          alt="Daniel Marek"
          class="w-72 rounded-2xl border border-slate-800 object-cover shadow-xl md:w-80"
        />
      </div>
    </div>
  </section>

  <div class="mx-auto max-w-[1400px] px-6">
    <div class="h-px bg-gradient-to-r from-transparent via-slate-600/40 to-transparent"></div>
  </div>

  <section class="mx-auto max-w-[1400px] px-6 py-32">
    <h2 class="mb-16 text-3xl font-semibold tracking-tight text-slate-100 md:text-4xl">Scientific Focus</h2>

    <div class="relative overflow-hidden rounded-2xl border border-slate-800 shadow-2xl">
      <div class="pointer-events-none absolute inset-0 rounded-2xl ring-1 ring-inset ring-white/5"></div>

      <div class="space-y-6 p-6 md:hidden">
        {
          focusAreas.map((area) => (
            <div class="relative overflow-hidden rounded-xl">
              <img
                src={`${baseUrl}${area.image}`}
                alt={area.title}
                class="h-[220px] w-full object-cover brightness-60"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/40 to-transparent"></div>
              <div class="absolute bottom-6 left-6">
                <h3 class="text-xl font-semibold text-white">{area.mobileTitle || area.title}</h3>
              </div>
            </div>
          ))
        }
      </div>

      <div class="hidden h-[520px] md:flex">
        {
          focusAreas.map((area) => (
            <article class="group relative flex-1 transition-all duration-700 ease-out hover:flex-[1.2]">
              <img
                src={`${baseUrl}${area.image}`}
                alt={area.title}
                class="absolute inset-0 h-full w-full object-cover brightness-40 transition duration-700 ease-out group-hover:brightness-90"
              />

              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent transition duration-700 group-hover:from-black/50"></div>

              <div class="relative z-10 flex h-full items-end p-10">
                <div class="translate-y-4 transform transition duration-700 ease-out group-hover:translate-y-0">
                  <h3 class="text-2xl font-semibold text-white">{area.title}</h3>
                  <p class="mt-4 max-w-sm text-slate-300 opacity-0 transition duration-700 group-hover:opacity-100">
                    {area.description}
                  </p>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <div class="mx-auto max-w-[1400px] px-6">
    <div class="h-px bg-gradient-to-r from-transparent via-slate-600/40 to-transparent"></div>
  </div>

  <section class="mx-auto max-w-[1400px] px-6 py-36">
    <div class="mb-20 flex items-center justify-between">
      <h2 class="text-3xl font-semibold tracking-tight text-slate-100 md:text-4xl">Projects</h2>

      <a
        href={`${baseUrl}projects`}
        class="group inline-flex items-center gap-2 rounded-lg border border-slate-700 bg-slate-900/40 px-5 py-2.5 text-sm font-medium text-slate-300 transition duration-300 hover:border-slate-500 hover:bg-slate-800/60 hover:text-white"
      >
        View all
        <span class="transition-transform duration-300 group-hover:translate-x-1">→</span>
      </a>
    </div>

    <div class="space-y-28">
      {
        featuredProjects.map((project) => (
          <article class="group grid items-center gap-12 md:grid-cols-2">
            <div class:list={[
              "relative overflow-hidden rounded-2xl border border-slate-800 shadow-lg",
              project.reverse && "md:order-2",
            ]}>
              <img
                src={`${baseUrl}${project.image}`}
                alt={project.title}
                class="h-[300px] w-full object-cover brightness-60 transition duration-700 group-hover:brightness-90"
              />
            </div>

            <div class:list={[project.reverse && "md:order-1"]}>
              <h3 class="text-2xl font-semibold text-slate-200">{project.title}</h3>
              <p class="mt-6 leading-relaxed text-slate-400">{project.summary}</p>
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <div class="mx-auto max-w-[1400px] px-6">
    <div class="h-px bg-gradient-to-r from-transparent via-slate-600/40 to-transparent"></div>
  </div>

  <section class="mx-auto max-w-[1400px] px-6 py-36">
    <h2 class="mb-24 text-4xl font-semibold tracking-tight text-slate-100 md:text-5xl">Technical Stack</h2>

    <div class="grid gap-16 md:grid-cols-2 lg:grid-cols-3">
      {
        techCategories.map((category) => (
          <article
            class:list={[
              "group relative rounded-3xl border border-slate-800 bg-slate-900/40 p-10 backdrop-blur-sm transition duration-500 hover:-translate-y-3 hover:border-slate-600",
              category.hoverShadow,
            ]}
          >
            <div
              class:list={[
                "absolute inset-0 rounded-3xl bg-gradient-to-br opacity-0 transition duration-500 group-hover:opacity-100",
                category.overlay,
              ]}
            >
            </div>

            <h3 class="relative mb-10 text-xl font-semibold text-slate-200">{category.title}</h3>

            <div class="relative grid grid-cols-3 items-center gap-10">
              {
                category.logos.map((logo) => (
                  <img
                    src={`${baseUrl}logos/${logo}.svg`}
                    alt={`${logo} logo`}
                    class="mx-auto h-12 opacity-80 transition group-hover:opacity-100"
                  />
                ))
              }
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <div class="mx-auto max-w-[1400px] px-6">
    <div class="h-px bg-gradient-to-r from-transparent via-slate-600/40 to-transparent"></div>
  </div>

  {
    previewSections.map((section) => (
      <>
        <section class="mx-auto max-w-[1400px] px-6 py-32">
          <div class="mb-12 flex items-center justify-between">
            <h2 class="text-3xl font-semibold tracking-tight text-slate-100 md:text-4xl">{section.title}</h2>

            <a
              href={`${baseUrl}${section.href}`}
              class="group inline-flex items-center gap-2 rounded-lg border border-slate-700 bg-slate-900/40 px-5 py-2.5 text-sm font-medium text-slate-300 transition duration-300 hover:border-slate-500 hover:bg-slate-800/60 hover:text-white"
            >
              View all
              <span class="transition-transform duration-300 group-hover:translate-x-1">→</span>
            </a>
          </div>

          <p class="max-w-2xl leading-relaxed text-slate-400">{section.description}</p>
        </section>

        <div class="mx-auto max-w-[1400px] px-6">
          <div class="h-px bg-gradient-to-r from-transparent via-slate-600/40 to-transparent"></div>
        </div>
      </>
    ))
  }

  <section class="mx-auto max-w-[1400px] px-6 pb-32 pt-16">
    <h2 class="mb-12 text-3xl font-semibold tracking-tight text-slate-100 md:text-4xl">Contact</h2>

    <p class="mb-12 max-w-2xl leading-relaxed text-slate-400">
      Interested in collaboration or research opportunities in AI, robotics, or space technologies?
      Feel free to reach out.
    </p>

    <div class="flex items-center gap-10">
      {
        contacts.map((contact) => (
          <a
            href={contact.href}
            target={contact.external ? "_blank" : undefined}
            rel={contact.external ? "noopener noreferrer" : undefined}
            class="group flex flex-col items-center gap-3 text-slate-400 transition hover:text-white"
          >
            <img
              src={`${baseUrl}logos/${contact.icon}.svg`}
              alt={contact.label}
              class="h-8 opacity-70 transition duration-300 group-hover:opacity-100"
            />
            <span class="text-sm">{contact.label}</span>
          </a>
        ))
      }
    </div>
  </section>
</Layout>
