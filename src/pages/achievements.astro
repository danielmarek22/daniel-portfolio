---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Achievements – Daniel Marek">

  <section class="py-32 px-6 max-w-5xl mx-auto">

    <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-100 mb-20">
      Achievements & Recognition
    </h1>

    <div class="space-y-24">

      <!-- Awards -->
      <div>
        <h2 class="text-2xl font-semibold text-slate-200 mb-10">
          Awards
        </h2>

        <div class="space-y-10">

          <div>
            <p class="text-slate-200 font-medium">
              3rd Place · Polish Space Agency Thesis Competition
            </p>
            <p class="text-slate-500 text-sm mt-1">
              For work on extraterrestrial rock segmentation using machine learning.
            </p>
          </div>

          <div>
            <p class="text-slate-200 font-medium">
              3rd Place · Trumpf Huettinger Engineering Thesis Competition
            </p>
            <p class="text-slate-500 text-sm mt-1">
              Awarded for applied machine learning research in planetary image analysis.
            </p>
          </div>

        </div>
      </div>


      <!-- Programs & Scholarships -->
      <div>
        <h2 class="text-2xl font-semibold text-slate-200 mb-10">
          Programs & Scholarships
        </h2>

        <div class="space-y-10">

          <div>
            <p class="text-slate-200 font-medium">
              Finalist · Polish Space Fellowship Program
            </p>
          </div>

          <div>
            <p class="text-slate-200 font-medium">
              Rector’s Scholarship for Academic Excellence
            </p>
            <p class="text-slate-500 text-sm mt-1">
              Silesian University of Technology · 2023–2024
            </p>
          </div>

        </div>
      </div>


      <!-- Certifications -->
      <div>
        <h2 class="text-2xl font-semibold text-slate-200 mb-10">
          Certifications
        </h2>

        <div class="space-y-10">

          <div>
            <p class="text-slate-200 font-medium">
              LanguageCert Test of English · C2 Proficiency
            </p>
          </div>

          <div>
            <p class="text-slate-200 font-medium">
              AgilePM® Foundation
            </p>
          </div>

        </div>
      </div>

    </div>

  </section>

</Layout>
