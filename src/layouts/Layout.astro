---
import "../styles/global.css";
const { title = "Daniel Marek" } = Astro.props;
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  </head>

<body class="relative bg-[#0b1020] text-slate-200 font-sans overflow-x-hidden">

  <!-- Background glow -->
  <div class="pointer-events-none fixed inset-0 z-0">
    <div class="absolute top-[-20%] left-[-10%] w-[800px] h-[800px]
                bg-cyan-500/25 rounded-full blur-[150px]
                drift-slow"></div>

    <div class="absolute bottom-[-20%] right-[-10%] w-[700px] h-[700px]
                bg-blue-600/20 rounded-full blur-[150px]
                drift-slower"></div>
  </div>

  <!-- NAVIGATION -->
  <header class="fixed top-0 left-0 w-full z-20 backdrop-blur-md bg-slate-900/40 border-b border-slate-800">
    <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">
      <span class="text-sm tracking-wide text-slate-300">
        Daniel Marek
      </span>

    <nav class="space-x-6 text-sm text-slate-400">
      <a href="/" class="hover:text-white transition">Home</a>
      <a href="/about" class="hover:text-white transition">About</a>
      <a href="/projects" class="hover:text-white transition">Projects</a>
      <a href="/papers" class="hover:text-white transition">Publications</a>
      <a href="/achievements" class="hover:text-white transition">Achievements</a>
    </nav>

    </div>
  </header>

  <!-- MAIN CONTENT -->
  <main class="relative z-10">
    <slot />
  </main>

</body>
</html>

